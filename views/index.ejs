<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Controle de Gado</title>
    <style>
        body { font-family: sans-serif; background-color: #f4f4f4; padding: 20px; }
        h1 { text-align: center; color: #333; }
        .container { max-width: 1000px; margin: 0 auto; background: white; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
        .btn-novo { display: inline-block; background: #28a745; color: white; padding: 10px 15px; text-decoration: none; border-radius: 5px; margin-bottom: 15px; }
        table { width: 100%; border-collapse: collapse; margin-top: 10px; }
        th, td { padding: 10px; border: 1px solid #ddd; text-align: left; }
        th { background-color: #f8f9fa; }
        img.boi-foto { width: 50px; height: 50px; object-fit: cover; border-radius: 50%; }
        .actions a { margin-right: 10px; text-decoration: none; color: #007bff; }
        .actions button { background: none; border: none; color: #dc3545; cursor: pointer; text-decoration: underline; font-size: 16px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Lista de Animais</h1>
        
        <% if (typeof status !== 'undefined' && status === 'success') { %>
            <div style="background: #d4edda; color: #155724; padding: 10px; margin-bottom: 15px;">Operação realizada com sucesso!</div>
        <% } %>
        <% if (typeof status !== 'undefined' && status === 'error') { %>
            <div style="background: #f8d7da; color: #721c24; padding: 10px; margin-bottom: 15px;">Erro: <%= message %></div>
        <% } %>

        <a href="/cadastro" class="btn-novo">+ Novo Animal</a>

        <table>
            <thead>
                <tr>
                    <th>Foto</th>
                    <th>Lacre (Brinco)</th>
                    <th>Nome</th>
                    <th>Registro</th>
                    <th>Peso (kg)</th>
                    <th>Nascimento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (usuarios.length > 0) { %>
                    <% usuarios.forEach(boi => { %>
                        <tr>
                            <td>
                                <% if (boi.foto_url) { %>
                                    <img src="<%= boi.foto_url %>" class="boi-foto" alt="Foto">
                                <% } else { %>
                                    <span>Sem foto</span>
                                <% } %>
                            </td>
                            <td><%= boi.numero_brinco %></td>
                            <td><%= boi.nome %></td>
                            <td><%= boi.registro %></td>
                            <td><%= boi.peso %></td>
                            <td><%= boi.data_nascimento %></td>
                            <td class="actions">
                                <a href="/alteracao/<%= boi.id %>">Editar</a>
                                <form action="/deletar/<%= boi.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Tem certeza?');">
                                    <button type="submit">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" style="text-align:center;">Nenhum animal cadastrado.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>